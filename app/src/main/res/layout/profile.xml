<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">




<TextView
    android:id="@+id/bg_color"
    android:layout_width="400dp"
    android:layout_height="181.76dp"
    android:background="#252E36"

    />

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="100dp"
    android:layout_height="107.51dp"
    android:id="@+id/cv"
    android:src= "@drawable/ic_user"
    android:layout_marginTop="21dp"
    app:civ_border_color="#FFFFFF"
    app:civ_border_width="2dp"

    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/user_name"
    android:text="Name Of User"
    android:textColor="#FFFFFF"
    android:layout_marginTop="5dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/cv"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/user_location"
    android:text="Location"
    android:textSize="12dp"
    android:textColor="#BBBEC1"
    android:layout_marginTop="5dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/user_name"
    android:drawableLeft="@drawable/location"
    android:drawablePadding="3dp"

    />

<TextView
    android:id="@+id/white_box1"
    android:layout_below="@id/bg_color"
    android:layout_width="400dp"
    android:layout_height="63.48dp"
    android:background="#ffffff"
    android:layout_alignParentStart="true"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/blood_group"
    android:text="Blood Group"
    android:textSize="15dp"
    android:textColor="#252E36"
    android:textStyle="bold"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:layout_centerHorizontal="false"
    android:layout_alignTop="@+id/white_box1"
    android:drawableLeft="@drawable/bloodgroup"
    android:drawablePadding="30dp"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/blood"
    android:layout_below="@+id/bg_color"
    android:layout_marginTop="30dp"
    android:text="Group"
    android:textSize="14dp"
    android:textColor="#8d95989a"
    android:textStyle="normal"
    android:paddingLeft="74dp"
    android:layout_centerHorizontal="false"
    />
    <View

        android:layout_height="2px"
        android:layout_width="match_parent"
        android:id="@+id/line1"
        android:background="#5fc6c6c6"
        android:layout_above="@+id/white_box2"
        />



<TextView
    android:id="@+id/white_box2"
    android:layout_width="400dp"
    android:layout_height="63.48dp"
    android:background="#ffffff"
    android:layout_below="@+id/white_box1"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gender"
    android:text="Gender"
    android:textSize="15dp"
    android:textColor="#252E36"
    android:textStyle="bold"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:layout_centerHorizontal="false"
    android:layout_alignTop="@+id/white_box2"
    android:drawableLeft="@drawable/gender"
    android:drawablePadding="30dp"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/genders"
    android:layout_below="@+id/bg_color"
    android:layout_marginTop="94dp"
    android:text="Gender"
    android:textSize="14dp"
    android:textColor="#8d95989a"
    android:textStyle="normal"
    android:paddingLeft="74dp"
    android:layout_centerHorizontal="false"
    />

<View
    android:id="@+id/line2"
    android:layout_below="@+id/white_box2"
    android:layout_height="2px"
    android:layout_width="400dp"
    android:background="#5fc6c6c6"
    android:layout_gravity="center"/>


<TextView
    android:id="@+id/white_box3"
    android:layout_below="@id/line2"
    android:layout_width="400dp"
    android:layout_height="63.48dp"
    android:background="#ffffff"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/contact_number"

    android:text="Contact Number"
    android:textSize="15dp"
    android:textColor="#252E36"
    android:textStyle="bold"

    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:layout_centerHorizontal="false"
    android:layout_alignTop="@+id/white_box3"
    android:drawableLeft="@drawable/call1"

    android:drawablePadding="30dp"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/contact_no"
    android:layout_below="@+id/bg_color"
    android:layout_marginTop="158dp"

    android:text="Number"
    android:textSize="14dp"
    android:textColor="#8d95989a"
    android:textStyle="normal"

    android:paddingLeft="74dp"

    android:layout_centerHorizontal="false"


    />

<View
    android:id="@+id/line3"
    android:layout_below="@+id/white_box3"
    android:layout_height="2px"
    android:layout_width="400dp"
    android:background="#5fc6c6c6"
    android:layout_gravity="center"/>

<TextView
    android:id="@+id/white_box4"
    android:layout_below="@id/line3"
    android:layout_width="400dp"
    android:layout_height="63.48dp"
    android:background="#ffffff"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/last_donation_date"

    android:text="Last Blood Donation Date"
    android:textSize="15dp"
    android:textColor="#252E36"
    android:textStyle="bold"

    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:layout_centerHorizontal="false"
    android:layout_alignTop="@+id/white_box4"
    android:drawableLeft="@drawable/date"

    android:drawablePadding="30dp"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/last_donation_dates"
    android:layout_below="@+id/bg_color"
    android:layout_marginTop="222.5dp"

    android:text="Date"
    android:textSize="14dp"
    android:textColor="#8d95989a"
    android:textStyle="normal"

    android:paddingLeft="74dp"

    android:layout_centerHorizontal="false"


    />


<View
    android:id="@+id/line4"
    android:layout_below="@+id/white_box4"
    android:layout_height="2px"
    android:layout_width="400dp"
    android:background="#5fc6c6c6"
    android:layout_gravity="center"/>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/line4"
    >

    <TextView
        android:id="@+id/white_box5"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f2f2"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="3"

        android:layout_alignTop="@+id/white_box5">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/call"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="#f1f2f2"
            android:src="@drawable/call"
            android:elevation="3sp"

            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/add_to_circle"

            android:layout_marginTop="12dp"
            android:src="@drawable/people"
            android:layout_weight="1"


            android:background="#f1f2f2"
            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/message"

            android:layout_marginTop="12dp"
            android:layout_weight="1"

            android:src="@drawable/message"

            android:background="#f1f2f2"
            />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="3"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/img"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/calling"
            android:layout_weight="1"


            android:text="Call"
            android:textSize="14dp"
            android:textColor="#8d95989a"
            android:textStyle="normal"
            android:textAlignment="center"

            />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_to_circles"

            android:padding="0dp"
            android:text="Add to Circle"
            android:textSize="14dp"


            android:textColor="#8d95989a"
            android:textStyle="normal"
            android:textAlignment="center"


            android:layout_weight="1"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messages"
            android:textSize="14dp"
            android:textColor="#8d95989a"
            android:textStyle="normal"
            android:layout_weight="1"
            android:text="Message"
            android:textAlignment="center"
            />
    </LinearLayout>

</RelativeLayout>
</RelativeLayout>

