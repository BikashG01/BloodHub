<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"

    android:background="?android:selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/small_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friend_pic"
        android:layout_alignRight="@+id/friend_pic"
        android:background="@drawable/circle" />

    <TextView
        android:id="@+id/blood_name_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="52dp"
        android:text="A+"
        android:textColor="#ffff"
        android:textSize="8sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/profile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/friend_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#bb393d40"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location"
            android:text="Address"
            android:textColor="#7a8289"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cancel_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="270dp"
        android:background="@drawable/ic_delete_black_24dp" />


    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/friend_pic"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="#5fc6c6c6" />
</RelativeLayout>
